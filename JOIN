SELECT orders.OrderID customers.CustomerName, orders.OrderDate FROM orders INNER JOIN customers ON orders.CustomerID = customers.CustomerID;
SELECT orders.OrderID, customers.CustomerName FROM customers LEFT JOIN orders ON orders.CustomerID = customers.CustomerID ORDER BY orders.OrderID; 
SELECT orders.OrderID, employees.FirstName, employees.LastName FROM orders RIGHT JOIN employees ON orders.EmployeeID = employees.EmployeeID; 
